        <Button
            android:id="@+id/btn1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:gravity="center"
            android:padding="0dp"
            android:text="有波纹触摸反馈的按钮(边框点击会变色)"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:bl_corners_radius="20dp"
            app:bl_pressed_stroke_color="#000000"
            app:bl_ripple_color="#71C671"
            app:bl_ripple_enable="true"
            app:bl_solid_color="#7CFC00"
            app:bl_stroke_width="2dp"
            app:bl_unPressed_stroke_color="@android:color/holo_red_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="selector 用法："
            android:textSize="15sp" />


        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="有波纹触摸反馈的按钮"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:bl_corners_radius="20dp"
            app:bl_pressed_drawable="#71C671"
            app:bl_ripple_color="#71C671"
            app:bl_ripple_enable="true"
            app:bl_stroke_color="#8c6822"
            app:bl_stroke_width="2dp"
            app:bl_unPressed_drawable="#7CFC00" />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="点击文字变色"
            app:bl_pressed_textColor="#919DAF"
            app:bl_unPressed_textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btn_setEnable"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="设置下面文字enable状态"
            android:textColor="@android:color/black" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_multi"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="textView一条属性多个状态：enable=true"
            android:textSize="18dp"
            android:textStyle="bold"
            app:bl_multi_text_selector1="state_pressed,state_enabled,#EE0000"
            app:bl_multi_text_selector2="-state_pressed,-state_enabled,#ff000000"
            app:bl_multi_text_selector3="-state_pressed,state_enabled,#DDA0DD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下面是通过代码设置背景：" />

        <TextView
            android:id="@+id/tvTest1"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="点击文字变色"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnTest2"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="背景"
            android:textColor="#4F94CD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnTest3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvTest4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp" />

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

        </FrameLayout>

    </LinearLayout>
